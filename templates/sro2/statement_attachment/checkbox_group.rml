{%load sro2_extras%}
{% with data.statement.id_str|add:","|add:danger as string %}							
	<illustration>
		{% if stage|getchecked:string %}
			<image file="{{ STATIC_ROOT }}/images/checkbox.png" x="0" y="0" width="10" height="10"/>
		{% else %}
			<image file="{{ STATIC_ROOT }}/images/box.png" x="0" y="0" width="10" height="10"/>				
		{% endif %}
	</illustration>	
{% endwith %}
